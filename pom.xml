				<!-- âœ… FIXED: Cucumber Reporting plugin wrapped correctly -->
				<plugin>
					<groupId>net.masterthought</groupId>
					<artifactId>maven-cucumber-reporting</artifactId>
					<version>5.8.4</version>
					<executions>
						<execution>
							<id>generate-cucumber-html-reports</id>
							<phase>verify</phase>
							<goals>
								<goal>generate</goal>
							</goals>
							<configuration>
								<projectName>CucumberProject</projectName>
								<outputDirectory>${project.build.directory}/cucumber-reports</outputDirectory>
								<cucumberOutput>${project.build.directory}/RunCuke/cucumber.json</cucumberOutput>
							</configuration>
						</execution>
					</executions>
				</plugin>

			</plugins>
		</pluginManagement>
